@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />

@if(Model.Count() > 0)
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Adress</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th><@Html.DisplayNameFor(E => E.HiringDate )</th>
            </tr>
        </thead>
    </table>
    
}
else
{
    <div class="mt-4 alert alert-info">
        <h4>
            There Are No Employees :(
        </h4>
    </div>
}

