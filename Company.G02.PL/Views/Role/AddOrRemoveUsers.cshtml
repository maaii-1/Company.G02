
@model List<UsersInRoleDto>

@{
    ViewData["Title"] = "Add Or Remove Users";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var RoleId = ViewData["RoleId"] as string;
}

<form asp-action="AddOrRemoveUsers" asp-route-id="@RoleId">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check mb-2">
            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
            <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
        </div>

        <input type="hidden" asp-for="@Model[i].UserId">
        <input type="hidden" asp-for="@Model[i].UserName">


    }

    <input type="submit" value="Update" class="btn btn-success" />
    <a asp-action="Edit" asp-route-id="@RoleId" class="btn btn-light">Cancle</a>

</form>
