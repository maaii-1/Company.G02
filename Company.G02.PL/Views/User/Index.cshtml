@model IEnumerable<UserToReturnDto>
@{
    ViewData["Title"] = "Index";

}

<h1>All Users</h1>
<br />
<br />


<form class="mb-3">
    <div class="container">
       <div class="row">
            <div class="col-6">
                <input id="SearchInput" placeholder="Search Employee" name="SearchInput" class="form-control" />
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
       </div>
    </div>
</form>

<br />

@if(Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Role</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>
                        @foreach(var role in item.Roles)
                        {
                            <span>@role</span>
                        }
                    </td>
                    <partial name="_ButtonsPartialView" model="@item.Id" />

                </tr>
            }
        </tbody>
    </table>
    
}
else
{
    <div class="mt-4 alert alert-info">
        <h4>
            There Are No Users :(
        </h4>
    </div>
}

