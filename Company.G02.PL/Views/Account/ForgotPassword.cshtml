@model ForgotPasswordDto
 
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_AuthLayOut.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div class="card shadow-sm border-0" style="max-width: 420px; margin: 60px auto; border-radius: 8px;">
			<div class="card-body">
				<h5 class="fw-bold mb-3 text-dark">Find Your Account</h5>

				<p class="text-secondary mb-4">
					Please enter your <strong>email address</strong> to search for your account.
				</p>

				<div asp-validation-summary="All" class="alert alert-info p-2"></div>

				<form asp-action="SendResetPasswordUrl">
					<div class="mb-3">
						<input class="text email form-control" asp-for="Email" placeholder="Email address" required>
						<input type="submit" value="Search" class="btn btn-primary px-4">
					</div>

					<div class="d-flex justify-content-end gap-2 mt-4">
						<a asp-action="SignIn" class="btn btn-light border">Cancel</a>
					</div>
				</form>
			</div>
		</div>


	</div>
</div>
